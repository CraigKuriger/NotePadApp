<div class="row">	
	<div class="col-sm-12">
		<h1 class="well"><%= @todo_list.title %></h1>
	</div>
</div>
<div class="row">
    <% @todo_list.todo_items.each do |todo_item| %>
    <div id="<%= dom_id(todo_item) %>" class="col-sm-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> <%= todo_item.content %></h3>
            </div>
            <div class="panel-body">
				<%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %>
			<%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?" } %>
                    <div class="text-right">
                    <a><% if todo_item.completed? %>
					<%= todo_item.completed_at %>
				<% else %>
					<%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch %>
				<% end %><i class="fa fa-arrow-circle-right"></i></a>
                    </div>
             </div>
        </div>
    </div>
    <% end %>
</div>



<hr>
<p><%= link_to "New Todo Item", new_todo_list_todo_item_path %></p>
