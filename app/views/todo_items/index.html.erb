<div class="row">	
	<div class="col-sm-8">
		<h1 class="well"><%= @todo_list.title %></h1>
        <h4 class="well"><%= @todo_list.description %></h4>
	</div>
	<div class="col-sm-4">
			<h1 class="btn btn-default pull-right"><%= link_to " New Todo Item", new_todo_list_todo_item_path, class: "fa fa-check" %></h1>
	</div>
</div>

<hr>

<div class="row">
    <% @todo_list.todo_items.each do |todo_item| %>
    <div id="<%= dom_id(todo_item) %>" class="col-sm-4">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil-square-o"></i> <%= todo_item.content %></h3>
            </div>
            <div class="panel-body">
				<a><%= link_to " Edit", edit_todo_list_todo_item_path(todo_item), class: "fa fa-pencil" %></a>
				<a><%= link_to " Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?" }, class: "fa fa-trash-o pull-right" %></a>
					<hr>
                    <div class="text-right">
                    <a><% if todo_item.completed? %>
					<i class="fa fa-check"></i> <%= todo_item.completed_at %>
				<% else %>
					<%= link_to " Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch, class: "fa fa-check" %>
				<% end %></a>
                    </div>
             </div>
        </div>
    </div>
    <% end %>
</div>

<hr>
